@using static Sonatto.Controllers.ProdutoController
@model ComboDeView

@{
    Layout = null;
    List<String> categoriaList = ["Sopro", "Corda", "Percursão", "Teclas"];
    List<String> coresList = ["#1D70B7", "#F4F4F4", "#B4B4B4", "#9B1B30"];
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sonatto</title>
    <link rel="stylesheet" href="~/css/Produto.css" />
    <link href="~/imgs/Logos/Monografia.png" rel="shortcut icon" />

    <style>
        /* Toast local para a página de produto (simples e parecido com o do carrinho) */
        #toast-product {
            position: fixed;
            right: 20px;
            bottom: 20px;
            background: #222;
            color: #fff;
            padding: 12px 16px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.2);
            opacity: 0;
            transform: translateY(12px);
            transition: opacity 240ms ease, transform 240ms ease;
            z-index: 2000;
            pointer-events: none;
            font-family: "Bruno Ace", monospace;
            max-width: 320px;
        }
        #toast-product.show {
            opacity: 1;
            transform: translateY(0);
            pointer-events: auto;
        }
    </style>
</head>
<body>
    @Html.Partial("_Header")

    <div class="conteudo-page">

    <div class="main">
        <div class="produtoContainer">
            <div class="produto">
                <div class="imageContainer">
                    <div class="imgSelector">
                        @for (int i = 0; i < Model.Produto.UrlImagens.Count; i++)
                        {
                            <div class="imgSelect" onclick="selectImage('@Url.Content(Model.Produto.UrlImagens[i])')">
                                <img src="@Url.Content(Model.Produto.UrlImagens[i])" alt="Imagens do produto" />
                            </div>
                        }
                    </div>
                    <div class="mainImage">
                        <img id="mainProductImage" src="@Url.Content(Model.Produto.UrlImagens[0])" alt="Imagem do Produto" />
                    </div>
                </div>
                <div class="buyContainer" data-id-produto="@Model.Produto.IdProduto">
                    <h1 class="productName">@Model.Produto.NomeProduto - @Model.Produto.Marca</h1>
                    <div class="priceContainer">
                        <h2 class="price">R$ @Model.Produto.Preco </h2>
                        @* <h3 class="priceFull">R$ @Model.Preco</h3> *@
                    </div>
                    <div class="buyBtn">
                        <div class="quantity-selector">
                            <button type="button" class="qty-btn" onclick="changeQty(-1)">−</button>
                            <span id="qty-value">1</span>
                            <button type="button" class="qty-btn" onclick="changeQty(1)">+</button>
                        </div>
                        <button class="add-to-cart-btn">Adicionar ao carrinho</button>
                    </div>
                </div>
            </div>
            <div class="productDetail">
                <h2 class="detailTitle">Detalhes do Produto</h2>
                <hr />

               
                <div class="descricaoProduto">
                    @* Marca *@
                    <div class="titulo-produto">

                    @foreach (var linha in Model.Produto.Marca.Split('\n'))
                    {
                        if (string.IsNullOrWhiteSpace(linha))
                        {
                            <br />
                        }
                        else if (linha.TrimStart().StartsWith("•") || linha.TrimStart().StartsWith("-"))
                        {
                            <div style="margin-left: 24px;">@linha</div>
                        }
                        else
                        {
                            <div>@linha</div>
                        }
                    }
                    </div>
                    @* Descricao *@
                    <div class="texto-descricao">
                        @foreach (var linha in Model.Produto.Descricao.Split('\n'))
                        {
                            if (string.IsNullOrWhiteSpace(linha))
                            {
                                <br />
                            }
                            else if (linha.TrimStart().StartsWith("•") || linha.TrimStart().StartsWith("-"))
                            {
                                <div style="margin-left: 24px;">@linha</div>
                            }
                            else
                            {
                                <div>@linha</div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="recomendacoes">
            <h1 class="title">Você pode gostar</h1>

            @Html.Partial("_CardsProdutosRecomendacoes", Model.Produtos)

        </div> 
         @Html.Partial("_Footer")
    </div>
    @*  *@


    </div>

    @* Toast local para produto *@
    <div id="toast-product" role="status" aria-live="polite" aria-atomic="true"></div>

    <script>
        function selectImage(src) {
            document.getElementById('mainProductImage').src = src;
            document.querySelectorAll('.imgSelect').forEach(el => el.classList.remove('selected'));

            Array.from(document.querySelectorAll('.imgSelect')).find(el =>
                el.querySelector('img').src.endsWith(src)
            )?.classList.add('selected');
        }
        window.onload = function() {
            document.querySelectorAll('.imgSelect')[0]?.classList.add('selected');
        };
        const mainImg = document.getElementById('mainProductImage');
        const mainImgContainer = document.querySelector('.mainImage');

        mainImgContainer.addEventListener('mousemove', function(e) {
            const rect = mainImg.getBoundingClientRect();
            const x = ((e.clientX - rect.left) / rect.width) * 100;
            const y = ((e.clientY - rect.top) / rect.height) * 100;
            mainImg.style.transformOrigin = `${x}% ${y}%`;
            mainImg.style.transform = 'scale(1.4)';
        });

        mainImgContainer.addEventListener('mouseleave', function() {
            mainImg.style.transformOrigin = 'center center';
            mainImg.style.transform = 'scale(1)';
        });

        let qty = 1;
        const maxStock = @Model.Produto.Quantidade; // limite vindo do backend
        function changeQty(delta) {
            qty = Math.max(1, Math.min(maxStock, qty + delta));
            document.getElementById('qty-value').textContent = qty;
        }

        // --- Toast local (fallback se notifyProductAdded global não existir) ---
        function showToastProduct(message, timeout = 3000, type = 'success') {
            const t = document.getElementById('toast-product');
            t.textContent = message;
            if (type === 'success') t.style.background = '#0a7f6f';
            else if (type === 'error') t.style.background = '#b00020';
            else t.style.background = '#222';
            t.classList.add('show');
            clearTimeout(t._t);
            t._t = setTimeout(() => t.classList.remove('show'), timeout);
        }

        // --- Adicionar ao carrinho via AJAX ---
        (function () {
            const addBtn = document.querySelector('.add-to-cart-btn');
            const qtyEl = document.getElementById('qty-value');
            const buyContainer = document.querySelector('.buyContainer');
            if (!addBtn || !qtyEl || !buyContainer) return;

            const idProduto = parseInt(buyContainer.dataset.idProduto || '0');
            const userId = @((Context.Session.GetInt32("UserId") ?? 0));

            addBtn.addEventListener('click', function () {
                let qtd = parseInt(qtyEl.textContent || '1');
                if (qtd > maxStock) {
                    qtd = maxStock;
                }
                if (qtd < 1) qtd = 1;

                if (!userId || userId === 0) {
                    // redireciona para login se não estiver autenticado
                    window.location.href = '/Login';
                    return;
                }

                const params = new URLSearchParams();
                params.append('idUsuario', userId);
                params.append('idProduto', idProduto);
                params.append('qtd', qtd);

                addBtn.disabled = true;
                addBtn.textContent = 'Adicionando...';

                fetch('/ItemCarrinho/Adicionar', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: params.toString()
                })
                .then(r => r.json())
                .then(res => {
                    if (res.sucesso) {
                        // tentar usar notifyProductAdded global (existirá quando carrinho.js estiver carregado).
                        if (typeof window.notifyProductAdded === 'function') {
                            window.notifyProductAdded(res.mensagem || 'Item adicionado ao carrinho');
                            // pequena espera para o usuário ver o toast e em seguida redirecionar
                            setTimeout(() => window.location.href = '/Carrinho', 900);
                        } else {
                            // fallback local: toast e redireciona
                            showToastProduct(res.mensagem || 'Item adicionado ao carrinho', 1500, 'success');
                            setTimeout(() => window.location.href = '/Carrinho', 900);
                        }
                    } else {
                        if (typeof window.notifyProductAdded === 'function') {
                            window.notifyProductAdded(res.mensagem || 'Erro ao adicionar item');
                        } else {
                            showToastProduct(res.mensagem || 'Erro ao adicionar item', 3000, 'error');
                        }
                    }
                })
                .catch(err => {
                    console.error('Erro ao adicionar ao carrinho:', err);
                    if (typeof window.notifyProductAdded === 'function') {
                        window.notifyProductAdded('Erro na requisição');
                    } else {
                        showToastProduct('Erro na requisição', 3000, 'error');
                    }
                })
                .finally(() => {
                    addBtn.disabled = false;
                    addBtn.textContent = 'Adicionar ao carrinho';
                });
            });
        })();
    </script>
</body>
</html>
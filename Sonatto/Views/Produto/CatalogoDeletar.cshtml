@model IEnumerable<Sonatto.Models.Produto>;
@{
    Layout = null;
    ViewData["Title"] = "Deletar Produto - Seleção";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/imgs/Logos/Monografia.png" />
    <link rel="stylesheet" href="~/css/CatalogoEditar.css" />
</head>
<body>
    @Html.Partial("_Header")
    <div class="faixa">
        <p>Escolha um produto abaixo para</p>
        <p style="color:#B42121">Deletar</p>
    </div>
    <div class="conteudo-page">
        
        <div class="menuLateral">
            <div class="navDasPag">
                <a asp-controller="Home" asp-action="Index">Home &gt;</a>
                <a asp-controller="Usuario" asp-action="Funcionario" style="color: black;">Ações &gt;</a>
                <span style="color: black;">Deletar</span>
            </div>
            <div class="menuLateralFiltros">
                <div class="menuLateralFiltrosTitulo">
                    <p>Filtros</p>
                    <img src="~/imgs/definindo-linhas.png" />
                </div>
                <div class="menuLateralFiltrosCategoria">
                    <a asp-controller="Produto" asp-action="CatalogoDeletar" asp-route-categoria="Sopro" class="categoria-btn">Sopro</a>
                    <a asp-controller="Produto" asp-action="CatalogoDeletar" asp-route-categoria="Percussão" class="categoria-btn">Percussão</a>
                    <a asp-controller="Produto" asp-action="CatalogoDeletar" asp-route-categoria="Cordas" class="categoria-btn">Cordas</a>
                    <a asp-controller="Produto" asp-action="CatalogoDeletar" asp-route-categoria="Teclas" class="categoria-btn">Teclas</a>
                </div>

                <div class="menuLateralFiltrosPrecos">
                    <p>Preços</p>
                    <div class="slider-container">
                        <form asp-controller="Produto" asp-action="CatalogoDeletar" method="get" class="form-inputs">
                            <input type="number" step="0.01" class="valor-input" id="valor-min" name="minPreco" placeholder="Val. Min" value="@(ViewBag.MinPreco?.ToString() ?? "")" />
                            <input type="number" step="0.01" class="valor-input" id="valor-max" name="maxPreco" placeholder="Val. Máx" value="@(ViewBag.MaxPreco?.ToString() ?? "")" />
                            <button type="submit" class="menuLateralFiltrosAplicar">Aplicar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        
        <div class="exibicao">
            <div class="exibicaoFilto">
                <p><span style="color: gray;">Filtro:</span> Maior relevância</p>
            </div>

            <div class="exibicaoGrid" id="listaProdutos">
                @Html.Partial("_CardsProdutosDeletar", Model)
            </div>

            <div id="pagination" class="exibicaoSwitch">
                @{
                    var paginaAtual = ViewBag.PaginaAtual ?? 1;
                    var totalPaginas = ViewBag.TotalPaginas ?? 1;
                    var search = ViewBag.Search as string ?? "";
                    var categoria = ViewBag.Categoria as string ?? "";
                    var minPreco = ViewBag.MinPreco as decimal?;
                    var maxPreco = ViewBag.MaxPreco as decimal?;
                }

                <a href="@Url.Action("CatalogoDeletar", new { pagina = paginaAtual - 1, search = search, categoria = categoria, minPreco = minPreco, maxPreco = maxPreco })"
                   class="exibicaoSwitchAnterior"
                   data-page="@(paginaAtual - 1)"
                   @(paginaAtual <= 1 ? "aria-disabled=\"true\"" : "")>
                    <img src="~/imgs/setaEsquerda.png" class="seta" /> Ant.
                </a>

                <div class="exibicaoSwitchNumeros">
                    @if (totalPaginas > 1)
                    {
                        for (int i = 1; i <= totalPaginas; i++)
                        {
                            <a href="@Url.Action("CatalogoDeletar", new { pagina = i, search = search, categoria = categoria, minPreco = minPreco, maxPreco = maxPreco })"
                               data-page="@i"
                               class="@(i == paginaAtual ? "ativo" : "")">
                                @i
                            </a>
                        }   
                    }
                </div>

                <a href="@Url.Action("CatalogoDeletar", new { pagina = paginaAtual + 1, search = search, categoria = categoria, minPreco = minPreco, maxPreco = maxPreco })"
                   class="exibicaoSwitchProximo"
                   data-page="@(paginaAtual + 1)"
                   @(paginaAtual >= totalPaginas ? "aria-disabled=\"true\"" : "")>
                    Próx. <img src="~/imgs/setaDireita.png" class="seta" />
                </a>
            </div>
        </div>
    </div>

    
    <div id="confirmModal" class="modal-overlay" role="dialog" aria-modal="true" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="imgDivModal">
                <img id="confirmImage" class="modal-img" src="" alt="Imagem do produto" />
            </div>
            <div class="modal-body">
                <p>Você está prestes a <strong style="color:red">Deletar</strong>:</p>
                <p id="confirmName" style="font-weight:600; margin-top:6px;"></p>
            </div>

            <div class="modal-actions">
                <button id="modalCancel" class="btn-cancel" type="button">Cancelar</button>

                <form id="deleteForm" asp-action="DeletarConfirm" asp-controller="Produto" method="post" style="margin:0;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" value="" />
                    <button id="modalDelete" class="btn-edit" type="submit">Deletar</button>
                </form>
            </div>
        </div>
    </div>

    @Html.Partial("_FooterSlim")
    <script>
        (function () {
            const input = document.getElementById("HeaderBusca");
            const lista = document.getElementById("listaProdutos");
            const pagination = document.getElementById("pagination");
            const categoriaBtns = document.querySelectorAll(".categoria-btn");
            const inputMin = document.getElementById('valor-min');
            const inputMax = document.getElementById('valor-max');

            let debounceTimer = null;
            let controller = null;

            function aplicarEstrelas() {
                const cards = document.querySelectorAll('.exibicaoCard');
                cards.forEach(card => {
                    const raw = card.getAttribute('data-avaliacao') || "0";
                    const rating = parseFloat(raw.toString().replace(',', '.')) || 0;
                    const stars = card.querySelectorAll('.star');
                    stars.forEach((star, index) => {
                        const starValue = index + 1;
                        star.classList.remove('filled', 'half');
                        if (rating >= starValue) {
                            star.classList.add('filled');
                        } else if (rating >= starValue - 0.5) {
                            star.classList.add('half');
                        }
                    });
                });
            }

            // Converte cards padrão (links para página do produto) em cards de delete
            function transformCardsForDelete() {
                const cards = document.querySelectorAll('#listaProdutos .exibicaoCard');
                cards.forEach(card => {
                    // já convertido
                    if (card.classList.contains('confirm-delete')) return;
                    const link = card.closest('a') || card;
                    // Extrai id do href se existir
                    let id = link.getAttribute('data-id');
                    if (!id) {
                        const href = link.getAttribute('href') || '';
                        const match = href.match(/Produto\/Produto\/(\d+)/i) || href.match(/id=(\d+)/i);
                        if (match) id = match[1];
                    }
                    if (id) link.setAttribute('data-id', id);
                    // nome do produto
                    if (!link.getAttribute('data-name')) {
                        const nameEl = link.querySelector('.cardNome') || link.querySelector('h3') || link.querySelector('p');
                        if (nameEl) link.setAttribute('data-name', nameEl.textContent.trim());
                    }
                    // imagem
                    if (!link.getAttribute('data-image')) {
                        const imgEl = link.querySelector('img');
                        if (imgEl) link.setAttribute('data-image', imgEl.getAttribute('src'));
                    }
                    link.classList.add('confirm-delete');
                    link.setAttribute('href', '#');
                    link.style.cursor = 'pointer';
                });
            }

            async function fetchAndReplace(search = "", page = 1, categoria = "", min = "", max = "") {
                if (!lista) return;

                if (controller) controller.abort();
                controller = new AbortController();
                const signal = controller.signal;

                const url = `/Produto/BuscarProdutos?search=${encodeURIComponent(search)}&pagina=${encodeURIComponent(page)}&categoria=${encodeURIComponent(categoria)}&minPreco=${encodeURIComponent(min)}&maxPreco=${encodeURIComponent(max)}`;

                try {
                    const res = await fetch(url, { signal });
                    if (!res.ok) throw new Error('Erro na resposta');
                    const html = await res.text();

                    const temp = document.createElement('div');
                    temp.innerHTML = html;

                    const novaLista = temp.querySelector('#listaProdutosFragment');
                    const novaPagination = temp.querySelector('#paginationFragment');

                    if (novaLista) {
                        lista.innerHTML = novaLista.innerHTML;
                    } else {
                        lista.innerHTML = html;
                    }

                    if (novaPagination && pagination) {
                        pagination.innerHTML = novaPagination.innerHTML;
                    }

                    aplicarEstrelas();
                    transformCardsForDelete();

                    const query = new URLSearchParams(window.location.search);
                    query.set('search', search || "");
                    // use 'pagina' consistently with server-side links
                    query.set('pagina', page);
                    if (categoria) query.set('categoria', categoria); else query.delete('categoria');
                    if (min) query.set('minPreco', min); else query.delete('minPreco');
                    if (max) query.set('maxPreco', max); else query.delete('maxPreco');
                    history.replaceState(null, '', `${window.location.pathname}?${query.toString()}`);

                } catch (err) {
                    if (err.name === 'AbortError') return;
                    console.error('Erro ao buscar produtos:', err);
                }
            }

            function debounceFetch(search, page, categoria, min, max) {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => fetchAndReplace(search, page, categoria, min, max), 250);
            }

            if (input) {
                let composing = false;
                input.addEventListener('compositionstart', () => composing = true);
                input.addEventListener('compositionend', () => composing = false);

                input.addEventListener('input', function (e) {
                    if (composing) return;
                    const val = e.target.value.trim();
                    if (!window.location.pathname.toLowerCase().includes("/produto/catalogo")) {
                        clearTimeout(debounceTimer);
                        debounceTimer = setTimeout(() => {
                            window.location.href = `/Produto/Catalogo?search=${encodeURIComponent(val)}`;
                        }, 200);
                        return;
                    }

                    debounceFetch(val, 1, '');
                });
            }

            categoriaBtns.forEach(btn => {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    // parse category from href to support server-generated links
                    let cat = "";
                    try {
                        const url = new URL(btn.href, window.location.origin);
                        cat = url.searchParams.get('categoria') || "";
                    } catch (err) {
                        cat = btn.getAttribute('data-cat') || "";
                    }
                    const search = input?.value?.trim() || "";
                    debounceFetch(search, 1, cat);
                });
            });

            document.addEventListener('click', function (e) {
                const a = e.target.closest('a[data-page]');
                if (!a) return;

                if (a.getAttribute('aria-disabled') === 'true') {
                    e.preventDefault();
                    return;
                }
                e.preventDefault();
                const page = parseInt(a.getAttribute('data-page')) || 1;
                const params = new URLSearchParams(window.location.search);
                const search = input?.value?.trim() || params.get('search') || "";
                const categoria = params.get('categoria') || "";
                const min = inputMin?.value?.trim() || params.get('minPreco') || "";
                const max = inputMax?.value?.trim() || params.get('maxPreco') || "";
                fetchAndReplace(search, page, categoria, min, max);

                const listaTop = lista?.getBoundingClientRect().top;
                if (listaTop !== undefined) window.scrollTo({ top: window.scrollY + (listaTop - 20), behavior: 'smooth' });
            });

            document.addEventListener('DOMContentLoaded', function () {
                const params = new URLSearchParams(window.location.search);
                const searchParam = params.get('search') || (input?.value || "");
                // server uses 'pagina'
                const pageParam = parseInt(params.get('pagina')) || 1;
                const categoriaParam = params.get('categoria') || "";
                const minParam = params.get('minPreco') || "";
                const maxParam = params.get('maxPreco') || "";

                if (inputMin && minParam) inputMin.value = minParam;
                if (inputMax && maxParam) inputMax.value = maxParam;

                aplicarEstrelas();
                transformCardsForDelete();
            });

        })();
    </script>
    <script>
        (function () {
            const modalOverlay = document.getElementById('confirmModal');
            const confirmImage = document.getElementById('confirmImage');
            const confirmName = document.getElementById('confirmName');
            const inputId = document.getElementById('deleteId');
            const btnCancel = document.getElementById('modalCancel');

            function openModal(id, name, image) {
                inputId.value = id;
                confirmName.textContent = name || '';
                confirmImage.src = image || '';
                modalOverlay.classList.add('open');
                modalOverlay.setAttribute('aria-hidden', 'false');
            }

            function closeModal() {
                modalOverlay.classList.remove('open');
                modalOverlay.setAttribute('aria-hidden', 'true');
            }

            // EVENTO DELEGADO (funciona até após paginação/filtro)
            document.addEventListener('click', function (e) {
                const card = e.target.closest('.confirm-delete');
                if (!card) return;

                e.preventDefault();
                e.stopPropagation();

                const id = card.getAttribute('data-id');
                const name = card.getAttribute('data-name');
                const img = card.getAttribute('data-image');

                openModal(id, name, img);
            });

            btnCancel.addEventListener('click', closeModal);

            modalOverlay.addEventListener('click', function (e) {
                if (e.target === modalOverlay) closeModal();
            });

            document.addEventListener('keydown', function (e) {
                if (e.key === 'Escape' && modalOverlay.classList.contains('open')) {
                    closeModal();
                }
            });
        })();
    </script>


</body>
</html>